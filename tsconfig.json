{
  "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "moduleResolution": "Node10",
      "strict": true,
      "jsx": "react",
      "noImplicitAny": true,
      "esModuleInterop": true,
      "strictNullChecks": true,
      "declaration": true,
      "isolatedModules": true,
      "noEmit": true,
      "outDir": "dist"
  },
  "include": ["src"]
}
